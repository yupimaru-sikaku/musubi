      # slackへ通知を送（ユーザー）
      notifier = Slack::Notifier.new(ENV['WEBHOOK_URL'])
      notifier.ping "むすびHPです。\n\n 
      ユーザー会員登録がありました。\n\n
      ★お名前\n
      #{current_user.human_name}\n\n
      ★郵便番号\n
      #{current_user.postal_code}\n\n
      ★住所\n
      #{current_user.address}\n\n
      ★電話番号\n
      #{current_user.phone_number}\n\n
      ★メールアドレス\n
      #{current_user.email}\n\n" +
      if current_user.agency_code.present?
        "\n\n      ★代理店コード\n#{current_user.agency_code}"
      else
        "\n\n      ★代理店コード\n無し"
      end

      # slackへ通知を送る（代理店）
      notifier = Slack::Notifier.new(ENV['WEBHOOK_URL'])
      notifier.ping "むすびHPです。\n\n 
      代理店申請がありました。\n\n
      ★代理店名\n
      #{current_company.agency_name}\n\n
      ★郵便番号\n
      #{current_company.postal_code}\n\n
      ★代理店コード\n
      #{current_company.agency_code}\n\n
      ★代表者名\n
      #{current_company.human_name}\n\n
      ★代表者の生年月日\n
      #{current_company.birth_day}\n\n
      ★代理店の郵便番号\n
      #{current_company.postal_code}\n\n
      ★代理店の住所\n
      #{current_company.address}\n\n
      ★代理店の電話番号\n
      #{current_company.phone_number}\n\n
      ★代理店のメールアドレス\n
      #{current_company.email}\n\n
      ★金融機関\n
      #{current_company.financial_facility_name}\n\n
      ★支店名\n
